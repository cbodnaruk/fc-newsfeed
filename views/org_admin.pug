doctype html
html
  head
    title Megagame Space: Live Megagame Dashboards
    link(rel='stylesheet', href='/css/styles.css')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js')
    link(href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@32,400,0,0", rel="stylesheet")
    script(src='/scripts/org_admin.js')
    script.
      const dashes = !{JSON.stringify(dashes)};
  body 
    .loading_modal 
      span.loader
    div#org_header
      h1(style="font-size: 3em") Organisation Management Panel 
      h3(style="text-align: right;") Signed in as !{org_data.name}
    div#org_info
      div(style="flex-grow:1; min-width:30vw;")
        div.org_section_header Dashboards:
        div#dash_list
          each d in dashes 
            if d.org_id == org_data.id
              div.flex_buttons
                input.dash_listing(type="text" id=`l_${d.dash_id}` value=d.dash_id disabled)
                span 
                  button(id=`e_${d.dash_id}` class="material-symbols-outlined adminbtn" onClick="editDash(event)") edit
                span 
                  button(id=`c_${d.dash_id}` class="material-symbols-outlined adminbtn" onClick="cancelEditDash(event)" style="display: none") close
                span 
                  button.adminbtn(id=`d_${d.dash_id}` class="material-symbols-outlined" onClick="deleteDash(event)") delete
                span 
                  button.adminbtn(id=`v_${d.dash_id}` class="material-symbols-outlined" onClick="visitDash(event)") open_in_new
        div 
            button.adminbtn(class="material-symbols-outlined" onClick="newDash()") library_add
      div(style="flex-grow:1; min-width:30vw;")
        .org_section_header Files:
        #file_list
          - var parse_org = org_data.name.replace(" ", "+")
          each file in files 
            .file_listing 
              span(style="flex-grow:1; text-align:left;") 
                a.file_link(href=`./assets/${parse_org}/${file.name}` id=`n_${file.name}`)=file.name
                input.file_edit(id=`e_${file.name}` value=file.name)
              
              span(style="flex-grow:1; text-align:right;display: flex; justify-content:flex-end;align-items: center;") 
                input.file_notes(id=`notes_${file.name}` value=file.notes onChange=("updateNotes(event)"))
                span.cp_url(class="material-symbols-outlined" onClick=`navigator.clipboard.writeText("/assets/${org_data.name}/${file.name}");`) content_copy
                span.cp_url(class="material-symbols-outlined" data-name=file.name onClick="editFile(event)") edit
                span.cp_url(class="material-symbols-outlined" data-name=file.name onClick="deleteFile(event)") delete
              
        div 
          input#file_input_box(type="file" name="fileInput")
          button.adminbtntext(style="width: auto;" onClick="uploadFile(event)") Upload...
            
    footer#org_navbar
      #password_change 
        #old_pw_box.password_prompt
          div#old_pw_label(style="width: 100%; text-align: center;") Old Password 
          input#old_pw(type="password")
          button.adminbtn(class="material-symbols-outlined adminbtn" onClick="progressPassword()") arrow_forward
          button#eyebtn(class="material-symbols-outlined" onmousedown="showPW()" onmouseup="hidePW()") visibility
        #new_pw_box.password_prompt
          div(style="width: 100%; text-align: center;") New Password 
          input#new_pw(type="password") 
          button.adminbtn(class="material-symbols-outlined adminbtn" onClick="savePassword()") save
          button#eyebtn(class="material-symbols-outlined" onmousedown="showPW()" onmouseup="hidePW()") visibility
        #success_pw_box.password_prompt
          div(style="width: 100%; text-align: center; padding-bottom: 3%;") Saved!

      .flex_buttons
        button.adminbtntext(onClick="window.location='/'") home
        button.adminbtntext(onClick="changePassword()") change password
        button.adminbtntext(onClick="logout()") log out
    #modal_layer