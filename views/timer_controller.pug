script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js')

script(src='/scripts/timer_editor.js')
div
  if is_running 
    span.btn#start_timer(onClick='startTimer(false)') Stop
  else
    span.btn#start_timer(onClick='startTimer(true)') Start
  if is_paused 
    span.btn#pause_timer(onClick='pauseTimer(false)') Unpause
  else 
    span.btn#pause_timer(onClick='pauseTimer(true)') Pause
  span.btn#reset_timer(onClick='resetTimer("f")') Reset to Start 
  span.btn#resetphase_timer(onClick='resetTimer("p")') Reset to Current Phase